<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners
            android:radius="14dp"
            />
        <gradient
            android:angle="45"
            android:centerX="35%"
            android:centerColor="#80eaeaea"
            android:startColor="#80eaeaea"
            android:endColor="#80eaeaea"
            android:type="linear"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <stroke
            android:width="1dp"
            android:color="#80878787"
            />
        android:layout_height="50dp"
        android:layout_width="50dp"
    </shape>
</selector>